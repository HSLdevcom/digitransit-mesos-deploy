{
  "id": "/opentripplanner-hsl",
  "cmd": null,
  "cpus": 1.9,
  "mem": 10240,
  "disk": 0,
  "instances": 10,
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "hsldevcom/opentripplanner:prod",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0,
          "servicePort": 10000,
          "protocol": "tcp",
          "name": "otphsl",
          "labels": {
            "VIP_0": "/opentripplanner-hsl:8080"
          }
        }
      ],
      "privileged": false,
      "parameters": [
        {
          "key": "net",
          "value": "host"
        },
        {
          "key": "name",
          "value": "opentripplanner-hsl"
        }
      ],
      "forcePullImage": true
    }
  },
  "env": {
    "ROUTER_DATA_CONTAINER_URL": "https://api.digitransit.fi/routing-data/v2/hsl",
    "ROUTER_NAME": "hsl",
    "JAVA_OPTS": "-Xmx7G -Xms7G -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:G1ReservePercent=10  -XX:+PrintGC"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "test $(curl -4 -s -o /dev/null -w \"%{http_code}\" http://localhost:$PORT0/otp/routers/hsl/) = 200"
      },
      "gracePeriodSeconds": 1200,
      "intervalSeconds": 30,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "update": "auto",
    "restart-after-services": "/opentripplanner-data-con-hsl",
    "restart-delay": "1",
    "restart-at": "05:15",
    "restart-limit-interval": "720"
  },
  "upgradeStrategy": {
    "minimumHealthCapacity": 1,
    "maximumOverCapacity": 1
  },
  "portDefinitions": [
    {
      "port": 10000,
      "protocol": "tcp",
      "labels": {}
    }
  ]
}
