{
  "id": "/pelias-data-container",
  "cmd": null,
  "cpus": 2,
  "mem": 6324,
  "disk": 0,
  "instances": 4,
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "hsldevcom/pelias-data-container:prod",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 9200,
          "hostPort": 0,
          "servicePort": 10003,
          "protocol": "tcp",
          "labels": {
            "VIP_0": "/pelias-data-container:9200"
          }
        },
        {
          "containerPort": 9300,
          "hostPort": 0,
          "servicePort": 10011,
          "protocol": "tcp",
          "labels": {
            "VIP_1": "/pelias-data-container:9300"
          }
        }
      ],
      "privileged": false,
      "parameters": [
        {
          "key": "name",
          "value": "pelias-data-container"
        }
      ],
      "forcePullImage": true
    }
  },
  "env": {
    "ES_HEAP_SIZE": "6g"
  },
  "healthChecks": [
    {
      "path": "/_search?q=name.fi:helsinki",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 600,
      "intervalSeconds": 10,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "labels": {
    "update": "auto"
  },
  "upgradeStrategy": {
    "minimumHealthCapacity": 1,
    "maximumOverCapacity": 1
  },
  "portDefinitions": [
    {
      "port": 10003,
      "protocol": "tcp",
      "labels": {}
    },
    {
      "port": 10011,
      "protocol": "tcp",
      "labels": {}
    }
  ]
}
