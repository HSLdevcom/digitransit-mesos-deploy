{
  "id": "/opentripplanner-waltti",
  "cmd": null,
  "cpus": 1.9,
  "mem": 10240,
  "disk": 0,
  "instances": 4,
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "hsldevcom/opentripplanner:prod",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0,
          "servicePort": 10008,
          "protocol": "tcp",
          "name": "otpfinland",
          "labels": {
            "VIP_0": "/opentripplanner-waltti:8080"
          }
        }
      ],
      "privileged": false,
      "parameters": [
        {
          "key": "net",
          "value": "host"
        },
        {
          "key": "name",
          "value": "opentripplanner-waltti"
        }
      ],
      "forcePullImage": true
    }
  },
  "env": {
    "ROUTER_DATA_CONTAINER_URL": "https://api.digitransit.fi/routing-data/v2/waltti",
    "ROUTER_NAME": "waltti",
    "JAVA_OPTS": "-Xmx7G -Xms7G -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:G1ReservePercent=10  -XX:+PrintGC"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "test $(curl -4 -s -o /dev/null -w \"%{http_code}\" http://localhost:$PORT0/otp/routers/waltti/) = 200"
      },
      "gracePeriodSeconds": 1200,
      "intervalSeconds": 30,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "update": "auto",
    "restart-after-services": "/opentripplanner-data-con-waltti",
    "restart-delay": "10"
  },
  "portDefinitions": [
    {
      "port": 10008,
      "protocol": "tcp",
      "labels": {}
    }
  ],
"upgradeStrategy": {
    "minimumHealthCapacity": 1,
    "maximumOverCapacity": 1
  }
}
